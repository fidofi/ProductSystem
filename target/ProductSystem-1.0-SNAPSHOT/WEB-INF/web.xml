<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <!--默认首页为登录界面-->
<welcome-file-list>
  <welcome-file>/WEB-INF/login.jsp</welcome-file>
</welcome-file-list>

  <servlet>
    <servlet-name>ProductServlet</servlet-name>
    <servlet-class>com.fidofi.controller.ProductServlet</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>ProductServlet</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DeleteServlet</servlet-name>
    <servlet-class>com.fidofi.controller.DeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteServlet</servlet-name>
    <url-pattern>/product/delete</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UpdateServlet</servlet-name>
    <servlet-class>com.fidofi.controller.UpdateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateServlet</servlet-name>
    <url-pattern>/product/update</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CreateServlet</servlet-name>
    <servlet-class>com.fidofi.controller.CreateServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SaveServlet</servlet-name>
    <servlet-class>com.fidofi.controller.SaveServlet</servlet-class>
  </servlet>
    <servlet>
        <servlet-name>UpdateSubmitServlet</servlet-name>
        <servlet-class>com.fidofi.controller.UpdateSubmitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailServlet</servlet-name>
        <servlet-class>com.fidofi.controller.DetailServlet</servlet-class>
    </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.fidofi.controller.LoginServlet</servlet-class>
  </servlet>
    <servlet>
        <servlet-name>OutServlet</servlet-name>
        <servlet-class>com.fidofi.controller.OutServlet</servlet-class>
    </servlet>
  <servlet>
    <servlet-name>ShowChartServlet</servlet-name>
    <servlet-class>com.fidofi.controller.ShowChartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowChartServlet</servlet-name>
    <url-pattern>/product/show</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>OutServlet</servlet-name>
    <url-pattern>/product/out</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DetailServlet</servlet-name>
    <url-pattern>/product/detail</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>UpdateSubmitServlet</servlet-name>
    <url-pattern>/product/update/submit</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>SaveServlet</servlet-name>
    <url-pattern>/product/save</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateServlet</servlet-name>
    <url-pattern>/product/create</url-pattern>
  </servlet-mapping>
  <!--发生错误信息时页面跳转-->
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/404.jsp</location>
  </error-page>
  <!--<error-page>-->
    <!--<error-code>500</error-code>-->
    <!--<location>/WEB-INF/500.jsp</location>-->
  <!--</error-page>-->
  <!--拦截器的配置-->
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.fidofi.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/product/*</url-pattern>
  </filter-mapping>
</web-app>

