<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">


  <servlet>
    <servlet-name>ProductServlet</servlet-name>
    <servlet-class>com.fidofi.controller.ProductServlet</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>ProductServlet</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DeleteServlet</servlet-name>
    <servlet-class>com.fidofi.controller.DeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteServlet</servlet-name>
    <url-pattern>/product/delete</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UpdateServlet</servlet-name>
    <servlet-class>com.fidofi.controller.UpdateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateServlet</servlet-name>
    <url-pattern>/product/update</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CreateServlet</servlet-name>
    <servlet-class>com.fidofi.controller.CreateServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SaveServlet</servlet-name>
    <servlet-class>com.fidofi.controller.SaveServlet</servlet-class>
  </servlet>
    <servlet>
        <servlet-name>UpdateSubmitServlet</servlet-name>
        <servlet-class>com.fidofi.controller.UpdateSubmitServlet</servlet-class>
    </servlet>
  <servlet-mapping>
    <servlet-name>UpdateSubmitServlet</servlet-name>
    <url-pattern>/update/submit</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>SaveServlet</servlet-name>
    <url-pattern>/product/save</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateServlet</servlet-name>
    <url-pattern>/product/create</url-pattern>
  </servlet-mapping>
</web-app>

